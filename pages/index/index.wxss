/**index.wxss**/
/*横向导航*/
@import '/css/iconfont.wxss';
page{
  background: #eee;
  padding-bottom: 28rpx;
}
.container{
  background: #fff;
}
.swiper-nav {
  white-space: nowrap;
  padding: 10rpx 0;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.swiper-nav .item-nav {
  position: relative;
  left: -50rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #000;
  font-size: 34rpx;
  cursor: pointer;
  display: inline-block;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}

.swiper-nav .item-nav :first-child {
  padding-left: 0 !important;
}

.swiper-nav .item-nav.active {
  font-weight: bold;
  font-size: 40rpx;
}

.topBox {
  position: relative;
  height: 750rpx;
}



#myVideo {
  width: 100%;
  height: 750rpx;
}

.textBox {
  text-align: center;
  font-family: PingFangSC-Medium, PingFang SC;
  margin: 20rpx 0 10rpx;
  color: rgba(0, 0, 0, 1);
}

.textBox .productName {
  height: 48rpx;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 48rpx;
}

.textBox .slogan {
  height: 36rpx;
  line-height: 36rpx;
  padding: 10rpx 0;
}

.textBox .priceBox {
  line-height: 48rpx;
}
.mask{
  position: absolute;
  opacity: 0.4;
}

.icongouwuche{
  font-size: 38rpx;
}