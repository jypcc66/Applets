/* pages/detail/detail.wxss */
@import '/css/global.wxss';
@import '/css/iconfont.wxss';
page{
  background: #eee;
  padding-bottom: 128rpx;
}
.ui-mask-overflow{padding-right:17px;overflow:hidden;}
.page-body{
  width: 100%;
}
swiper {
  height: 750rpx;
}
.page-section{
  width: 100%;
  height: 750rpx;
}
.detailInfo{
  padding:20rpx;
}
.flexWrap{
  justify-content: center;
  align-items: center;
}
.rightBox{
  flex:0 0 165rpx;
  color: #999;
}
.rightBox .rightMain{
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.iconBox{
  width: 45rpx;
  height: 45rpx;
}
.iconfenxiang{
  font-size: 38rpx;
}

.fenXiangBox{
  margin-top: 7rpx;
}
.rightBox .flexFlow{
  margin-left:20rpx;
}
.shareIcon{
  width: 40rpx!important;
  height: 40rpx!important;
}
.titleBox{
  padding-top:10rpx;
}
.titleCh{
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: bold;
}
.titleEn{
  padding:10rpx 0 20rpx;
}
.shopMain{
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
}
.logo{
  width: 80rpx;
  height: 80rpx;
  margin-right:10rpx;
}

.guarantee{
  color: #323232;
  padding-left:20rpx;
}

.detailCommon{
  border-bottom: 2rpx solid #eee;
}
.right{
  float: right;
  text-align: right;
}
.detailCommon .arrow{
  font-family: SimSun;
  font-size: 30rpx;
  font-weight: bold;
  margin-left:20rpx;
}
.deliveryBox{
  font-size: 30rpx;
}
.sales{
  text-align: right;
}
.doubt{
  display: inline-flex;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-left:10rpx;
  font-size: 30rpx;
  align-items: center;
  font-family:PingFangSC-Regular,PingFang SC;
  justify-content: center;
  color: #999;
  border:2rpx solid #999;
  border-radius: 100%;
}
/*评价*/
.portrait{
  flex: 0 0 60rpx;
  margin-right: 20rpx;
}
.portrait image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  overflow: hidden;
}
.evaluateList{
  padding:20rpx;
  border-top:2rpx solid #eee;
}
.reviewBox .evaluateList:first-child{
  border-top:none;
}
.evaluateList .userName{
  font-size: 28rpx;
}
.evaluateList .date{
  flex:0 0 180rpx;
  font-size: 24rpx;
}
.evaluateList .con{
  padding-top:10rpx;
  line-height: 36rpx;
}
.productImg{
  display: block;
}
.textBox{
  padding:20rpx 20rpx 30rpx;
  line-height: 40rpx;
}
/*footer*/
.footerNav{
  flex: 0 0 310rpx;
}
.footerNav .gray{
  font-size: 20rpx;
}
.footerNav image{
  width: 42rpx;
  height: 42rpx;
  display: block;
  margin:auto;
}
.joinCar,.buyBtn{
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
}
.joinCar{
  background: #000;
}
.buyBtn{
  background: #DE0002;
}
/*规格弹层*/
.specsLayout{
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  z-index: 101;
}
.specsLayout .box{
  padding:28rpx 20rpx 40rpx;
}

.skuBox{
  padding: 20rpx 0 0;
  border-bottom: 2rpx solid #eee;
}
.skuPro{
  padding: 0 0 20rpx;
  border-bottom: 2rpx solid #eee;
}
.skuPro .layoutImg{
  flex:0 0 164rpx;
  height: 164rpx;
  margin-right: 18rpx;
  overflow: hidden;
  border:2rpx dashed #333;
}
.skuPro .productImg{
  width: 164rpx;
  height: 164rpx;
}
.skuPro .price{
  font-size: 40rpx;
}
.pb10{
  padding-bottom: 10rpx;
}
.specsTxt{
  color: #222;
  line-height: 36rpx;
}
.skuTit{
  padding-top:20rpx;
  font-size: 30rpx;
  color: #222;
}
.specsBox.flexWraps{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.specsBox .flexFlow1{ 
  position: relative;
  padding:0 20px;
  height: 60rpx;
  line-height: 60rpx;
  margin:0 20rpx 20rpx 0;
  background: #F1F1F1;
  box-sizing: border-box;
  border:1rpx solid #F1F1F1;
}
.specsBox .active{
  color: #fff;
  background: #000;
  border-color: #000;
}
.specsBox .hook{
  display: none;
  position: absolute;
  right:5rpx;
  bottom:5rpx;
  width: 23rpx;
  height: 18rpx;
}
.specsBox .active .hook{
  display: block;
}
.specsBox .disable{
  color: #BCBCBC;
  background: none;
  border:2rpx dashed rgba(194,194,194,1);
}

/*数量*/
.skuQuantityBox{
  padding-top:20rpx;
}
.skuQuantityBox .skuTit{
  padding:0
}



/*返回顶部*/
.return {
  position: fixed;
  bottom: 200rpx;
  right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:22rpx 25rpx;
  width: 40rpx;
  height: 45rpx;
  background: rgba(0, 0, 0, 0.5);
}



